{
  "name": "flux-site",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "sync:flux-version": "node ./scripts/sync-flux-version.mjs",
    "prebuild": "npm run sync:flux-version",
    "build": "vite build && node scripts/prerender.mjs && node scripts/check-dist-no-private-net.mjs",
    "preview": "vite preview",
    "lint": "eslint .",
    "postbuild": "node scripts/copy-404.mjs && node scripts/copy-edit.mjs",
    "badges:generate": "node scripts/generate-badges.mjs",
    "test": "vitest",
    "test:e2e": "playwright test"
  },
  "dependencies": {
    "@flux-lang/brand": "file:packages/brand",
    "@flux-lang/core": "^0.1.6",
    "framer-motion": "^11.11.17",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-helmet-async": "^2.0.5",
    "react-markdown": "^10.1.0",
    "react-router-dom": "^6.28.0",
    "remark-gfm": "^4.0.1"
  },
  "devDependencies": {
    "@playwright/test": "^1.42.1",
    "@testing-library/jest-dom": "^6.4.2",
    "@testing-library/react": "^16.0.1",
    "@types/react": "^18.3.11",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.3",
    "autoprefixer": "^10.4.0",
    "eslint": "^8.57.1",
    "eslint-plugin-react-hooks": "^5.1.0-rc.0",
    "eslint-plugin-react-refresh": "^0.4.12",
    "jsdom": "^24.1.1",
    "postcss": "^8.4.0",
    "tailwindcss": "^3.4.0",
    "typescript": "^5.6.2",
    "vite": "^5.4.8",
    "vitest": "^2.1.4"
  }
